datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique 
  password  String  
  createdAt DateTime @default(now())
}

model ReadPost {
  id         Int      @id @default(autoincrement())
  userEmail  String     
  resourceId String 
  utmSource  String?  
  utmMedium  String?
  utmCampaign String?
  utmChannel String?
  createdAt  DateTime @default(now())

  @@unique([userEmail, resourceId])
}


